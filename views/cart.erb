<p2>Список заказанных продуктов</p2>
<br/>
<br/>

<% summ = 0 %>
<% quantity = 0 %>
<table class="table table-bordered">
<tr class="active">
	<td>Наименование</td>
	<td>Кол-во</td>
	<td>Стоимость</td>
</tr>
	<% @items.each do |item| %>
		<tr>
			<td><%= item[0].title %></td>
			<td><%= item[1] %><% quantity = quantity + item[1].to_i %></td>
			<td><%= item[0].price %><% summ = summ + item[1].to_i * item[0].price.to_i %></td>
		</tr>
	<% end %>

<tr class="success">
	<td>ИТОГО</td>
	<td><%= quantity %></td>
	<td><%= summ %></td>
</tr>	

</table>

<form action="/place_order" method="POST" role="form">

	<input name="order[orders_input]" type="hidden" value="<%= @orders_input %>"/>

  <div class="form-group">
    <label>Name: </label>
    <input name="order[name]" type="text" class="form-control" placeholder="your name...">
  </div>

  <div class="form-group">
    <label>Phone: </label>
    <input name="order[phone]" type="text" class="form-control" placeholder="phone no...">
  </div>

  <div class="form-group">
    <label>Delivery Adress: </label>
    <textarea id="datetimepicker" name="order[adress]" type="text" class="form-control" placeholder="adress..."></textarea>
  </div>

  <button type="submit" class="btn btn-success btn-lg">Place this order</button>
  <button type="submit" class="btn btn-danger btn-lg" onclick="alert('aaa'); return false">Cancel</button>

</form>
	
